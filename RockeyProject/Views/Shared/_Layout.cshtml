<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet"
          asp-href-include="/lib/bootstrap/dist/**/*.min.css"
          asp-href-exclude="**/*-reboot*,**/*-grid*" />
    <link rel="stylesheet" asp-href-include="/lib/fontawesome/css/*.css" />
    <title>RockeyProject</title>
</head>
<body>

    <div class="navbar navbar-inverse bg-inverse" role="navigation">
        <div class="row">
            <a class="col navbar-brand" href="#">Rockey Project</a>
            <div class="col-8 text-center">

                <a class="btn-lg align-middle" href="@Url.Action("Login","Account")">Login</a>
                <a class="btn-lg align-middle" href="@Url.Action("List","Product")">Products</a>
                <a class="btn-lg align-middle" href="@Url.Action("List","Order")">Orders</a>
                <a class="btn-lg align-middle" href="@Url.Action("Contact","Home")">Contact</a>
                <a class="btn-lg align-middle" href="@Url.Action("About","Home")">About</a>
            </div>
            <div class="col text-right">
                @await Component.InvokeAsync("CartSummary")
            </div>
        </div>
    </div>
    <div class="col-11" >@RenderBody()</div>
   
</body>
</html>
