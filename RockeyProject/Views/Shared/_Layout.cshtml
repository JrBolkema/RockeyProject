<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet"
          asp-href-include="/lib/bootstrap/dist/**/*.min.css"
          asp-href-exclude="**/*-reboot*,**/*-grid*" />
    <link rel="stylesheet" asp-href-include="/lib/fontawesome/css/*.css" />
    <title>RockeyProject</title>
</head>
<body>
    
    <div class="navbar navbar-inverse bg-inverse" role="navigation">
        <div class="row">
            <a class="col navbar-brand" href="#">Rockey Project</a>
            <div class="col-8 text-center">
                <a class="col align-middle" href="#">Login</a>
                <a class="col align-middle" href="#">Products</a>
                <a class="col align-middle" href="#">Orders</a>
                <a class="col align-middle" href="#">Contact</a>
                <a class="col align-middle" href="#">About</a>
            </div>
            <div class="col text-right">
                @await Component.InvokeAsync("CartSummary")
            </div>
        </div>
    </div>
    <div class="row m-1 p-1">
        <div id="categories" class="col-3">
            @await Component.InvokeAsync("NavigationMenu")
        </div>
        <div class="col-9">

            @RenderBody()
        </div>
    </div>
</body>
</html>
